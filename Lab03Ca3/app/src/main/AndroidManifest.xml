<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="vn.edu.tdtu.elit.android.lab03">

  <uses-permission android:name="android.permission.INTERNET"/>

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <activity
      android:label="@string/app_name"
      android:name=".exercise01.MainActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <activity
      android:name=".exercise01.WelcomeActivity"/>

    <activity
      android:name=".exercise02.Exercise02"/>

    <activity
      android:name=".exercise03.Exercise03"/>

    <activity
      android:label="@string/lab03_browser"
      android:name=".exercise03.BrowserActivity">
      <intent-filter>
        <data android:scheme="http" />
        <action android:name="android.intent.action.VIEW" />
        <category android:name="android.intent.category.DEFAULT"/>
        <category android:name="android.intent.category.BROWSABLE"/>
      </intent-filter>
    </activity>

    <activity
      android:name=".exercise04.Exercise04"/>

  </application>
</manifest>