<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/activity_exercise1_txt_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="nhập đường link trang web" />

    <EditText
        android:id="@+id/activity_exercise1_edt_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_exercise1_txt_message"
        android:layout_marginTop="80dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:text="@string/http_www_google_com"
        android:hint="@string/input_url" />

    <Button
        android:id="@+id/activity_exercise1_btn_open_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/activity_exercise1_edt_link"
        android:text="Mở trình duyệt" />
</RelativeLayout>
